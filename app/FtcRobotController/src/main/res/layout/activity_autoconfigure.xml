<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.qualcomm.ftcrobotcontroller.AutoConfigureActivity">

  <include layout="@layout/header"
           android:id="@+id/included_header"/>

  <ScrollView
    android:layout_below="@id/included_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
      android:id="@+id/configureButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/autoconfigure" />

    <TextView
      android:id="@+id/configureButton_text"
      android:layout_marginBottom="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/autoconfigureButton_text"/>
    <!-- red line -->
    <View
      android:layout_width="match_parent"
      android:layout_height="2dip"
      android:background="#FF0000" />

    <LinearLayout
      android:id="@+id/autoconfigure_info"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>
  </LinearLayout>



  </ScrollView>

</RelativeLayout>
